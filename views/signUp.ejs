        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-10 col-xl-10">
              <div class="card">
                <div class="card-body p-5">
                  <div class="row">
                    <div class="col-md-6">
                      <!-- Left side -->
                      <form action="/signUp" method="post" onsubmit="return validateForm()">
                        <div style="display: flex; justify-content: center; align-items: center;">
                          <img src="https://www.dlsud.edu.ph/images/about-logo.png" alt="dlsud-logo" class="logo">
                          <img src="https://culture360.asef.org/media/2011/7/Museo_De_La_Salle.jpeg" alt="dlsud-logo"
                            class="logo">
                        </div><br>

                        <div class="form-outline mb-4">
                          <input type="text" id="name" class="form-control form-control-lg" name="name"
                            autocomplete="off" required />
                          <label class="form-label" for="name">Name</label>
                        </div>

                        <div class="form-outline mb-4">
                          <input type="email" id="email" class="form-control form-control-lg" name="email"
                            autocomplete="off" required />
                          <label class="form-label" for="email">Email Address</label>
                        </div>

                        <div class="form-outline mb-4">
                          <input type="password" id="password" class="form-control form-control-lg" name="password"
                            autocomplete="off" required />
                          <label class="form-label" for="password">Password</label>
                        </div>

                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="userType" id="teacherRadio" value="Teacher"
                            required>
                          <label class="form-check-label" for="teacherRadio">
                            Teacher
                          </label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="userType" id="studentRadio" value="Student"
                            required>
                          <label class="form-check-label" for="studentRadio">
                            Student
                          </label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="userType" id="othersRadio" value="Others"
                            required>
                          <label class="form-check-label" for="othersRadio">
                            Others
                          </label>
                        </div>

                        <div class="form-outline mb-4" id="othersInput" style="display: none;">
                          <input type="text" id="others" class="form-control form-control-lg" name="others"
                            autocomplete="off" />
                          <label class="form-label" for="others">Other (please specify)</label>
                        </div>

                        <div class="d-flex justify-content-center mt-3">
                          <button type="submit"
                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Sign Up</button>
                        </div>
                        <p class="text-center text-muted mt-5 mb-0">Have an account already? <a href="/signIn"
