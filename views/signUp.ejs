  <!-- Template Main JS File -->
  <script src="/js/index.js"></script>
  <script>
    const othersRadio = document.querySelector('#othersRadio');
  const othersInput = document.querySelector('#othersInput');
  const othersText = document.querySelector('#others');
  const teacherRadio = document.querySelector('#teacherRadio');
  const studentRadio = document.querySelector('#studentRadio');

  othersRadio.addEventListener('change', function () {
    if (this.checked) {
      othersInput.style.display = 'block';
    } else {
      othersInput.style.display = 'none';
    }
  });

  teacherRadio.addEventListener('change', function () {
    if (this.checked) {
      othersInput.style.display = 'none';
    }
  });

  studentRadio.addEventListener('change', function () {
    if (this.checked) {
      othersInput.style.display = 'none';
    }
  });

  othersText.addEventListener('input', function () {
    othersRadio.value = this.value;
  });

  function validateForm() {
    const othersInput = document.getElementById('others');
    const othersValue = othersInput.value.toLowerCase(); // Convert the input value to lowercase for case-insensitive check

    if (othersValue.includes('admin')) {
      alert('The word "admin" is not allowed in the Others field.');
      return false; // Prevent form submission
    }

    // Continue with the form submission if "admin" is not found
    return true;
  }
  </script>

